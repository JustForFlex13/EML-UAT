    <description>Création de la tâche + envoi email d&apos;information au QAR une fois que la première étape de validation s&apos;est déroulée</description>
    <environments>Default</environments>
    <formulas>
        <name>Date</name>
        <dataType>Date</dataType>
        <expression>NOW()</expression>
    </formulas>
    <formulas>
        <name>Task_Subject</name>
        <dataType>String</dataType>
        <expression>&quot;Validation finale du programme : &quot;+ {!$Record.Name}</expression>
    </formulas>
    <formulas>
        <name>TaskDueDate</name>
        <dataType>DateTime</dataType>
        <expression>{!$Flow.CurrentDateTime}+5</expression>
    </formulas>
    <interviewLabel>[Compte - Programme academique] {!$Flow.CurrentDateTime}</interviewLabel>
    <label>[Compte - Programme academique]Tache validation du programme - QAR</label>
    <processMetadataValues>
