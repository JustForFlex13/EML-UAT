<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>RecordType</field>
        <field>SIS_Official_name__c</field>
        <field>SIS_Location__c</field>
        <field>SIS_HigherEducationInstitution__c</field>
        <field>SIS_Program_Family__c</field>
        <field>Owner</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Coche_Validation_du_responsable</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>SIS_Validation_Responsible__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Etape d&apos;approbation</label>
        <name>Etape_1</name>
        <rejectionActions>
            <action>
                <name>Refus_Responsable_Case_Soumis</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>SIS_QAR_responsible__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Etape d&apos;approbation QAR</label>
        <name>Etape_2_QAR</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Workflow de validation de la création d&apos;un programme académique impliquant le créateur du programme, et deux approbateurs (Nom du responsable de validation du programme (Doyen) et Nom du responsable QAR)</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.SIS_Program_Status__c</field>
            <operation>equals</operation>
            <value>Révision</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>SIS_Approval_Validated_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SIS_Send_email_after_approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>SIS_Validation_QAR</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>MAJ_Case_Soumis_Decoche</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SIS_Program_Approval_to_Revision</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Validation_refusee</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>SIS_Approval_Program_Submit</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SIS_MAJ_Case_Soumis</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approbation programme académique</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
